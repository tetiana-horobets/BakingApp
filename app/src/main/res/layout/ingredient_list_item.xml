<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/quantity"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="4dp"/>

    <TextView
        android:id="@+id/measure"
        android:layout_width="45dp"
        android:layout_height="30dp"
        android:layout_marginRight="4dp"
        android:layout_alignBaseline="@+id/quantity"
        android:layout_alignBottom="@+id/quantity"
        android:layout_toEndOf="@+id/quantity"
        android:layout_toRightOf="@+id/quantity" />

    <TextView
        android:id="@+id/ingredient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/measure"
        android:layout_alignBottom="@+id/measure"
        android:layout_toEndOf="@+id/measure"
        android:layout_toRightOf="@+id/measure" />

</RelativeLayout>
